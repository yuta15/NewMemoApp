<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/index.css">
</head>
<body>
    <header>
        <h1>Welcome to My Memo App</h1>
        <nav id="nav-menu" class="hidden">
            <ul>
                <li><a href="#home">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>
        <button class="hamburger" type="button">
            <div></div>
            <div></div>
            <div></div>
        </button>
    </header>
    <main>
        <div class="container">

            <!-- Title -->
            <div class="accordion-title">
                <p>Items</p>
                <button id="add-item">Add</button>
            </div>
            
            <!-- modal window Add -->
            <div id="add-item-screen" class="modal">
                <form id="add-item-form" action="/" method="post">
                    <label for="item-name">Item Name:</label>
                    <input type="text" id="item-name" name="addItemTitle" required>
                    
                    <label for="item-description">Item Description:</label>
                    <textarea id="item-description" name="addItemContent" required></textarea>
                    
                    <input type="submit" value="Add Item">
                    <button id="cancel-add-item" type="button">Cancel</button>
                </form>
            </div>
            
            <!-- modal Window edit -->
                <div id="edit-item-screen" class="modal">
                    <form id="edit-item-form" action="#" method="post">
                        <label for="item-name">Item Name:</label>
                        <input type="text" id="item-name" name="editItemName" required>
                        
                        <label for="item-description">Item Description:</label>
                        <textarea id="item-description" name="editItemContent" required></textarea>
                        
                        <input type="submit" value="Save Changes">
                        <button type="button" id="cancel-edit-item">Cancel</button>
                    </form>
                </div>
            
            <!-- Accordionメニュー -->
            <div class="accordion">
                <% items.forEach((item) => {%>                
                    <div class="accordion-item">
                        <div class="accordion-header">
                            <button class="accordion-button"><%= item.title %></button>
                            <button class="edit-button">Edit</button>
                        </div>
                        <div class="accordion-content">
                            <p><%= item.content %></p>
                        </div>
                    </div>
                <%}); %>
            <!-- Add more accordion items as needed -->
        </div>
        
        </div>
    </main>
    <footer>
        <p>Copyright © 2022</p>
    </footer>
    <script defer src="src/index.js"></script>
</body>
</html>